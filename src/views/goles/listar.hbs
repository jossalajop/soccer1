<link rel="stylesheet" href="/css/video/listar.css"/>
<form action="/goles/listar/{{user.id_usuario}}" method="get">
    <div id="container">

     <div id="container">
    <div class="row">
        {{#each lista}}
        <div id="tarjeta">
            <div id="goles">
                <h3 style="text-align:center" >DESCRIPCIÓN - GOLES</h3>
                <p><strong>Goles</strong> <br>{{goles}}</p>
            </div>

            <div id="fecha_puclicacion">
                <p><strong>Fecha de publicación</strong> <br>{{fecha_puclicacion}}</p>
            </div>

            <div id="boton">
                <a href="/goles/editar/{{id_goles}}"><button type="button">Editar</button></a> 
            </div>

            <div id="eliminar">
                <a href="/goles/eliminar/{{id_goles}}" ><button type="button">Eliminar</button></a> 
            </div>

         <br><br>
   
            {{/each }}
            
    </div>
</form>